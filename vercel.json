{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static",
      "config": { "distDir": "frontend/dist/dietgen-frontend" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/index.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/dietgen-frontend/$1" },
    { "src": "/(.*)", "dest": "/frontend/dist/dietgen-frontend/index.html" }
  ],
  "installCommand": "cd frontend && npm install && cd ../backend && npm install",
  "buildCommand": "cd frontend && npm run build"
}